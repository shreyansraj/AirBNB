    <% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input placeholder="enter title" name="listing[title]" type="text" class="form-control">
        </div>

       <div class="mb-3">
             <label for="description" class="form-label">Description</label>
             <textarea placeholder="enter description" name="listing[description]" class="form-control"></textarea>
       </div>

       <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input placeholder="enter image URL/Link" name="listing[image]" type="text" class="form-control">
       </div>

       <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input placeholder="7000" name="listing[price]" type="number" class="form-control">
      </div>
      
      <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input placeholder="India" name="listing[country]" type="text" class="form-control">
      </div>
       </div>
      
       <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input placeholder="Goa" name="listing[location]" type="text" class="form-control">
       </div>
       
       <button type="submit" class="btn btn-dark btn-color mt-3">Add</button>
    </form>
  </div>
</div>
